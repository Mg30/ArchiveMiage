{%extends '@CPCocoloc/Annonce/base.html.twig'%}


{%block title%}
	{{'Mon profile'|trans}} 
{%endblock%}


  {% block stylesheets %}

    <link rel="stylesheet" href="{{ asset('css/'~app.request.session.get('theme')~'.css') }}">
  {% endblock %}

  {%block path %}
    <li class="active">
         <a href= "{{path('profile',{'_locale':'fr','id': user.id}) }}">Français </a>
    </li>
    <li class="active"> 
        <a href="{{path('profile',{'_locale':'en','id': user.id}) }}"> English </a>
    </li>
{%endblock%}

 {%block body%}
  {{ wo_render_breadcrumbs() }}
 <div class="container">
        <div class="row">
          <h3>{{ user.username|trans}} </h3>
        </div>
      <div class="row">
      <img src="{{ asset('uploads/user/' ~ user.image) }}" height="100px" width="250px">

<ul class="list-group">
  <li class="list-group-item d-flex justify-content-between align-items-center">
    {{user.description}}
  </li>
  <li class="list-group-item d-flex justify-content-between align-items-center">
    {{user.email}}
  </li>
  <li class="list-group-item d-flex justify-content-between align-items-center">
    {{'Dernière connexion'|trans}}
    <span class="badge badge-primary badge-pill">{{user.lastLogin|date}}</span>
  </li>
</ul>
</div>
</div>
{%endblock%}